{% extends 'base_aventure.html.twig' %}

{% block sstitle %}Inventaire{% endblock %}

{% block content %}
    <style>
        body {
            background-image: url(/img/backpack.png);
            background-position: center center;
            background-size: cover;
            background-attachment: fixed;
        }
    </style>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Qte</th>
                        <th width="75%">Nom</th>
                        <th>Poids</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for persoItem in perso.persoItems %}
                        <tr>
                            <td><i class="fa-solid {{ persoItem.item.icon }}"></i></td>
                            <td>{{ persoItem.qte }}</td>
                            <td>{{ persoItem.item.name }}</td>
                            <td>{{ persoItem.qte * persoItem.item.weight }}</td>
                            <td>
                                <a href="{{ path('app_inventaire_use', {item_id: persoItem.item.id}) }}" class="btn btn-primary">Utiliser</a>
                                <a href="{{ path('app_inventaire_remove', {item_id: persoItem.item.id}) }}" class="btn btn-danger"><i class="fa-solid fa-download"></i> DÃ©poser</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
