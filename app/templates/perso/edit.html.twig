{% extends 'base.html.twig' %}

{% block title %}Mise à jour d'un personnages{% endblock %}

{% block body %}
    <style>
        body {
            background-image: url(/img/circle1.png);
            background-position: center center;
            background-size: cover;
        }
    </style>
    
    <div class="top">
        <div class="container">
            <div class="d-flex justify-content-between">
                <h1>Vos personnages</h1>
                <div>
                    <a href="{{ path('app_perso_index') }}" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i> Retour</a>
                    <a href="{{ path('app_perso_delete', { id: perso.id }) }}" onclick="return confirm('Etes-vous sur ?')" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Supprimer</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="box">
            <div class="box-body">
                <div class="d-flex justify-content-between">
                    <h1>Mise à jour d'un personnages</h1>
                </div>

                <div>
                    {{ form_start(form) }}

                        {{ form_errors(form) }}

                        {{ form_row(form.name) }}
                        {{ form_row(form.race) }}
                        {{ form_row(form.imageFile) }}

                        <div class="mb-3">
                            <button type="submit" id="perso_save" class="btn-primary btn">Mettre à jour</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
