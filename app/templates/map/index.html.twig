{% extends 'base.html.twig' %}

{% block title %}Home page{% endblock %}

{% block body %}
    <div class="top">
        <div class="container">
            <div class="d-flex justify-content-between">
                <h1>Carte du monde</h1>
            </div>
        </div>
    </div>
    
    <div class="container">
        {% for zone in zones %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Zone {{ zone.id }} : {{ zone.name }}</h5>

                    {% for city in zone.cities %}
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('app_city_index', {id: city.id}) }}">{{ city.name }}</a>
                                </h5>
                                <ul>
                                    {% for place in city.places %}
                                        <li>{{ place.name }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endfor %}

                    <ul>
                        {% for place in zone.places %}
                            {% if place.city == null %}
                                <li>{{ place.name }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
