<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>DD Aventure | {% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="auth">
        <div class="container-fluid">
            <div class="row">
                <div class="col hero"></div>

                <div class="col">
                    {% block body %}{% endblock %}

                    <footer class="text-center fs-6 text-body-secondary mt-5">
                        © {{ 'now' | date('Y') }} - <a href="https://overconsulting.net" target="_blank" class="text-secondary text-decoration-none">Overconsulting.net</a>
                    </footer>
                </div>
            </div>
        </div>
    </body>
</html>
